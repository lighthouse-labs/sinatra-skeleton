  <header>
    <h1>What movie would you like to add?</h1>
  </header>
  <section class="form">
    <form class="form-horizontal" id="profile" action="/movies/new" method="POST">

      <div class="form-group">
        <label for="title" class="col-sm-4 control-label">Movie Title</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="title" id="title" />
        </div>
      </div>  

      <br>

      <div class="form-group">
        <label for="year-released" class="col-sm-4 control-label">Year Released</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="year_released" id="year-released" />
        </div>
      </div>

      <br>

      <div class="form-group">
        <label for="parent-rating" class="col-sm-4 control-label">Motion Picture Rating</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="parent_rating" id="parent-rating" />
        </div>
      </div>

      <br>

      <div class="form-group">
        <label for="studio" class="col-sm-4 control-label">Studio</label>
        <div class="col-sm-8">
          <input type="text" class="form-control" name="studio" id="studio" />
        </div>
      </div>

      <br>

      <div class="form-group">
        <div class="col-sm-offset-4">
          <input type="submit" value="submit" />
        </div>
      </div>

    </form>
  </section>